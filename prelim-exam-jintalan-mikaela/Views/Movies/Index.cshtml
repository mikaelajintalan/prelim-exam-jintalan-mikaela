@model MovieGenreVM

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-image: url('https://scontent.fmnl4-4.fna.fbcdn.net/v/t1.15752-0/p280x280/123739322_1338021103208201_1884640544343258589_n.jpg?_nc_cat=100&ccb=2&_nc_sid=ae9488&_nc_eui2=AeENMXCZIuIXQ6yTVV5BjTYrEY2uDAqZehgRja4MCpl6GBhLRpmnWPB63yTHNBWfO1faL0ZaqtZVxkEV5MYsnx6v&_nc_ohc=rPr_RMUHPnAAX9FHvqk&_nc_oc=AQkIW_2ZabFpCUwkPSAwGd9t-3NclhRTfckFng2aYF2b2D-WGfN1keKJOzcMln28RYM&_nc_ht=scontent.fmnl4-4.fna&tp=6&oh=b4e488dd8eff81f53ae303d834602c23&oe=5FC9EF71');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-attachment: fixed;
        background-size: 100% 100%;
        background-color: #fea8f3;
    }

    #movies {
        font-family: Comic Sans MS;
        color: #FFFFFF;
        border-collapse: collapse;
        width: 100%;
    }

        #movies td, #movies th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #movies tr:hover {
            background-color: #FBAED2;
        }

        #movies th {
            padding-top: 12px;
            color: #FFFFFF;
            padding-bottom: 12px;
            text-align: center;
            background-color: #FF00FF;
            color: #FFFFFF;
        }
        h1{
            text-align: center;
            font-weight: bold;
        }
</style>
<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table" id="movies">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>@Html.DisplayNameFor(m => m.Movies[0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Rating)
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-small btn-success" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                        <a class="btn btn-small btn-secondary" asp-action="Details" asp-route-id="@item.id">Details</a>
                        <a class="btn btn-small btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
